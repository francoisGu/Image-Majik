<%= form_for(@folder) do |f| %>
  <% if @folder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@folder.errors.count, "error") %> prohibited this folder from being saved:</h2>

      <ul>
      <% @folder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <% if params[:action] = "new" %>
    <%= f.submit "Create", class: "btn btn-default" %> |
    <%= link_to 'Back', my_folders_path, class: "btn btn-default" %>
  <% elsif params[:action] = "edit" %>
    <%= f.submit "Update", class: "btn btn-default" %> |
    <%= link_to 'Back', folder_path, class: "btn btn-default" %>
  <% end %>
<% end %>
